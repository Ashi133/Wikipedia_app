<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0372A4"
    tools:context=".Activities.Users_profile">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_profile1"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:scaleType="fitXY"
        android:src="@drawable/user"
        app:civ_border_color="@color/white"
        app:civ_border_width="2dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_profile1"
        android:textColor="@color/white"
        android:id="@+id/user_name1"
        android:layout_marginTop="20dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="Name"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textSize="18sp"
        tools:ignore="HardcodedText" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_name1"
        android:textColor="@color/white"
        android:id="@+id/user_about1"
        android:layout_marginTop="15dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="About"
        android:ellipsize="end"
        android:maxLines="4"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textSize="18sp"
        tools:ignore="HardcodedText" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_about1"
        android:textColor="@color/white"
        android:id="@+id/user_contact1"
        android:layout_marginTop="15dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="Contact"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textSize="18sp"
        tools:ignore="HardcodedText" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:id="@+id/user_call1"
        android:paddingTop="5dp"
        android:layout_centerHorizontal="true"
        android:paddingBottom="5dp"
        android:text="Call"
        android:textAllCaps="false"
        android:drawableLeft="@drawable/call"
        android:layout_below="@id/user_contact1"
        tools:ignore="HardcodedText,RtlHardcoded" />
</RelativeLayout>