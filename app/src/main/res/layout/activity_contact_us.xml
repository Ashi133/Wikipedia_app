<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Contact_Us">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#2196F3"
        android:id="@+id/rel">

        <ImageView
            android:id="@+id/contact_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:contentDescription="@null"
            android:src="@drawable/ic_baseline_arrow_back_24" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/contact_back"
            android:gravity="center"
            android:letterSpacing="0.04"
            android:text="Contact Us"
            android:textColor="@color/white"
            android:textSize="22sp"
            tools:ignore="HardcodedText" />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:textSize="16sp"
        android:textColor="#2196F3"
        android:layout_below="@id/rel"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="For any query regarding this Application,Please contact the Application Developer"
        android:id="@+id/info"
        tools:ignore="HardcodedText" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/phone_rel"
        android:layout_below="@id/info"
        android:padding="5dp"
        android:background="#F3EDED"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/call_icon"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:src="@drawable/ic_baseline_call_24"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/call_icon"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+91 9752078964"
                android:textColor="#2196F3"
                android:id="@+id/my_no"
                android:textSize="16sp"
                tools:ignore="HardcodedText" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+91 7224853471"
                android:textColor="#2196F3"
                android:id="@+id/sis_no"
                android:layout_marginTop="5dp"
                android:textSize="16sp"
                tools:ignore="HardcodedText" />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/time_rel"
        android:layout_below="@id/phone_rel"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:background="#F3EDED"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/time_icon"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:src="@drawable/ic_baseline_access_time_24"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:00 AM - 08:00 PM"
            android:layout_centerVertical="true"
            android:textColor="#2196F3"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_toEndOf="@id/time_icon"
            android:layout_marginTop="5dp"
            android:textSize="16sp"
            tools:ignore="HardcodedText" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/email_rel"
        android:layout_below="@id/time_rel"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:background="#F3EDED"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/email_icon"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:src="@drawable/ic_baseline_email_24"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/email_icon"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="rahmatullahansari38@gmail.com"
                android:textColor="#2196F3"
                android:id="@+id/my_mail"
                android:textSize="16sp"
                tools:ignore="HardcodedText" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ashiagrawal133@gmail.com"
                android:textColor="#2196F3"
                android:id="@+id/sis_mail"
                android:layout_marginTop="5dp"
                android:textSize="16sp"
                tools:ignore="HardcodedText" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>